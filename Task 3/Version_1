import pandas as pd
import random

bk = pd.read_csv('books-en.csv',sep=';', encoding='latin-1')
bibliography = []
for i in range(20):
    r = random.randint(0,9408)
    bibliography.append('{}. {} - {}'.format(bk.iloc[r]['Book-Author'],bk.iloc[r]['Book-Title'],bk.iloc[r]['Year-Of-Publication']))

for b in bibliography:
    print(b)