import pandas as pd

bk = pd.read_csv('books-en.csv', sep=';', encoding='latin-1')

while 1:
    author = input("ingrese nombre del autor: ")
    results = bk[bk['Book-Author'] == author]
    print (results)
    q = input("Do you want to do another search?[y/n]: ")    
    if q == 'n':
        break