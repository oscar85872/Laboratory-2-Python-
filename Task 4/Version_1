import xml.etree.ElementTree as ET

# Abrir y parsear el archivo XML
tree = ET.parse('currency.xml')
root = tree.getroot()

# Mostrar todas las monedas
print("=== LISTA DE MONEDAS ===")
for valute in root.findall('Valute'):
    print(f"ID: {valute.get('ID')}")
    print(f"CÃ³digo: {valute.find('CharCode').text}")
    print(f"Nombre: {valute.find('Name').text}")
    print(f"Nominal: {valute.find('Nominal').text}")
    print(f"Valor: {valute.find('Value').text} RUB")
    print(f"Valor por unidad: {valute.find('VunitRate').text} RUB")
    print("-" * 50)

